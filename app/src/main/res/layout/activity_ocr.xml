<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/screens"
    tools:context=".OCR">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/scanner"
        android:id="@+id/captureImageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/captureImageView"
        android:id="@+id/detectedImage"
        android:textColor="@color/black"
        android:text="Your result will appear here"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="4dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Snap"
        android:textColor="@color/Purplish_blue"
        android:layout_below="@id/detectedImage"
        android:background="@drawable/custom_btn"
        app:backgroundTint="@color/blue"
        android:textAllCaps="false"
        android:id="@+id/snapBtn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Detect"
        android:textColor="@color/Purplish_blue"
        android:layout_below="@id/snapBtn"
        android:background="@drawable/custom_btn"
        app:backgroundTint="@color/blue"
        android:textAllCaps="false"
        android:id="@+id/detectBtn"/>

</RelativeLayout>